<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.pai.knowledge.main.view.widget.ViewOne
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="多线程学习"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18sp" />

    <com.pai.knowledge.main.view.widget.ViewTwo
        android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="按钮二"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.pai.knowledge.main.view.widget.loadingview.LoadingIndicatorView
            android:id="@+id/loading"
            android:layout_width="@dimen/size_58dp"
            android:layout_height="@dimen/size_65dp"
            android:padding="@dimen/size_10dp"
            android:background="@color/black_alpha60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/size_40dp"
            android:textSize="@dimen/text_size_12sp"
            android:layout_gravity="center_horizontal"
            android:text="加载中" />
    </FrameLayout>
</LinearLayout>